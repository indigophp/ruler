{
    "name": "indigophp/ruler",
    "description": "Library for being able to define logical rules and conditional outcomes",
    "license": "MIT",
    "keywords": ["rules", "processing"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "henrikbjorn/phpspec-code-coverage" : "1.0.*@dev"
    },
    "autoload": {
        "psr-4": {
            "Indigo\\Ruler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Indigo\\Ruler\\Stub\\": "stub/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
